<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/assets/iconKinentaGuard.png" sizes="64">
    <title>Kinenta Guard</title>
    <link href="../assets/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="../assets/css/all.min.css">
    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>




</head>

<body>
    <style>
        /* ===== MOBILE FIRST ===== */

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }

        .topbar {
            display: flex;
            align-items: center;
            padding: 10px;
            background: linear-gradient(180deg, rgba(3, 52, 129, 0.78) 0%, rgba(0, 0, 0, 0) 100%);
            background-color: #0193E0;
            color: white;
        }

        .menu-btn {
            font-size: 24px;
            margin-right: 10px;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
        }

        /* Sidebar default hidden */
        .sidebar {
            position: fixed;
            top: 0;
            left: -260px;
            width: 260px;
            height: 100vh;
            background: #fff;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            z-index: 999;
            /* padding-top: 10px; */
            /* padding-top: 60px; */
        }

        .sidebar.open {
            left: 0;
        }

        .sidebar ul {
            list-style: none;
            padding: 10px;
        }

        .sidebar li {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }

        .sidebar li a {
            text-decoration: none;
            gap: 10px;
        }

        .sidebar li a span {
            margin-right: 10px;
        }

        .sidebar a {
            color: black;
            /* warna ungu ikonmu atau bebas */
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        /* pastikan semua state warnanya sama */
        .sidebar a:visited,
        .sidebar a:hover,
        .sidebar a:active {
            color: black;
        }

        /* Konten */
        .content {
            padding: 20px;
        }

        .overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.3);
            display: none;
            z-index: 998;
        }

        .overlay.show {
            display: block;
        }

        #titleSidebar {
            display: flex;
        }

        .body-content {
            padding: 15px;
            padding-top: 40px;
        }

        table tr td {
            padding: 5px;
        }

        table td, table th {
        border: 1px solid #e1e4e8;
    }

        /* ===== DESKTOP MODE ===== */
        @media (min-width: 600px) {
            .layout-wrapper {
                display: flex;
            }

            .table-container {
                width: 800px;
            }

            .topbar {
                display: flex;
                align-items: center;
                padding: 17px;
                background: linear-gradient(180deg, rgba(3, 52, 129, 0.78) 0%, rgba(0, 0, 0, 0) 100%);
                background-color: #0193E0;
                color: white;
            }

            #titleSidebar {
                display: none;
            }

            .menu-btn {
                display: none;
                /* Desktop nggak pake tombol */
            }

            .sidebar {
                position: static;
                width: 240px;
                left: 0;
                height: 100vh;
                box-shadow: none;
            }

            .content {
                margin-left: 240px;
            }

        }
    </style>
    <%- include('header') %>
        <div class="layout-wrapper">
            <%- include('sidebar') %>
                <div class="body-content">
                    <%- body %>
                </div>
        </div>
        <div id="overlay" class="overlay"></div>

        <script>
            const menus = JSON.parse(localStorage.getItem('menus'));
            const menuBtn = document.getElementById('menuBtn');
            const sidebar = document.getElementById('sidebar');
            const overlay = document.getElementById('overlay');

            menuBtn.addEventListener('click', () => {
                sidebar.classList.toggle('open');
                overlay.classList.toggle('show');
            });

            overlay.addEventListener('click', () => {
                sidebar.classList.remove('open');
                overlay.classList.remove('show');
            });

            let menusHtml = '';
            menus.forEach(menu => {
                menusHtml += `<li>
                                    <a href="${menu.menu_path}">
                                        <i class="fa ${menu.icon}"></i> &nbsp;${menu.menu_name}
                                    </a>
                             </li>`;
                // console.log(menusHtml);
            });
            $('#menuList').html(menusHtml);

            $('.logout-btn').click(function () {
                // Hapus token dari localStorage
                localStorage.removeItem('token');
                localStorage.removeItem('role');
                localStorage.removeItem('profile');
                localStorage.removeItem('menus');
                // Redirect ke halaman login
                window.location.href = '/';
            });
        </script>
</body>

</html>