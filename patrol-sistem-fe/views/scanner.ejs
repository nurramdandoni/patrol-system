<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkpoint Patrol</title>
  <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 30px;
      background: #f7f7f7;
    }

    h2 {
      color: #007bff;
      margin-bottom: 10px;
    }

    #camera-panel {
      width: 340px;
      background: white;
      border: 2px solid #333;
      border-radius: 10px;
      padding: 10px;
      text-align: center;
    }

    #reader,
    video,
    canvas,
    #preview {
      width: 320px;
      height: 240px;
      border-radius: 10px;
    }

    #reader {
      display: block;
    }

    #camera-container {
      display: none;
    }

    #result {
      margin-top: 10px;
      font-size: 16px;
      background: #e3e3e3;
      padding: 8px 12px;
      border-radius: 5px;
      color: #333;
    }

    button {
      margin: 5px;
      padding: 8px 15px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      color: white;
      font-weight: bold;
    }

    .btn-primary {
      background: #007bff;
    }

    .btn-secondary {
      background: #6c757d;
    }

    .btn-success {
      background: #28a745;
    }

    button:disabled {
      background: #ccc;
      cursor: not-allowed;
    }

    #notes {
      width: 95%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-top: 10px;
    }
  </style>
</head>

<body>

  <h2>Kinenta Patrol</h2>

  <div id="camera-panel">
    <div id="reader"></div>

    <div id="camera-container">
      <video id="camera" autoplay playsinline></video>
      <canvas id="snapshot" style="display:none;"></canvas>
      <img id="preview" style="display:none; width:320px; height:auto; border-radius:8px; margin-top:8px;" />
    </div>
  </div>

  <div id="result">Silakan scan QR lokasi...</div>
  <input type="hidden" id="token_location">
  <input type="text" id="notes" placeholder="Catatan ....">

  <div>
    <button class="btn-secondary" id="flip" style="width: 100%; display:none;">üîÑ Ubah Kamera</button>
    <button class="btn-primary" id="take-photo" disabled style="width: 100%;">üì∏ Ambil Foto</button>
    <button class="btn-success" id="submit-data" disabled style="width: 100%;">‚úÖ Submit</button>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    const html5QrCode = new Html5Qrcode("reader");
    const resultElement = document.getElementById("result");
    const cameraContainer = document.getElementById("camera-container");
    const readerDiv = document.getElementById("reader");

    let stream = null;
    let availableCameras = [];
    let currentCameraIndex = 0;
    let photoBase64 = "";
    let facingMode = "environment";

    const video = document.getElementById("camera");
    const canvas = document.getElementById("snapshot");
    const preview = document.getElementById("preview");
    const flipBtn = document.getElementById("flip");
    const takeBtn = document.getElementById("take-photo");
    const submitBtn = document.getElementById("submit-data");

    // === STEP 1: SCAN QR ===
    Html5Qrcode.getCameras().then(async (devices) => {
      if (!devices.length) throw new Error("Tidak ada kamera tersedia");

      availableCameras = devices;
      if (devices.length > 1) flipBtn.style.display = "block";

      await startQrScanner(devices[currentCameraIndex].id);
    }).catch(err => {
      resultElement.innerText = "Tidak bisa mengakses kamera: " + err;
    });

    async function startQrScanner(cameraId) {
      await html5QrCode.start(
        cameraId,
        { fps: 10, qrbox: 250 },
        (qrMessage) => {
          resultElement.innerText = "‚úÖ QR Terdeteksi";
          document.getElementById("token_location").value = qrMessage;
          html5QrCode.stop();
          switchToCameraMode();
        },
        () => { }
      );
    }

    // === STEP 2: MODE FOTO ===
    async function switchToCameraMode() {
      readerDiv.style.display = "none";
      cameraContainer.style.display = "block";
      takeBtn.disabled = false;
      submitBtn.disabled = false;
      await startCamera();
    }

    async function startCamera() {
      try {
        if (stream) stream.getTracks().forEach(track => track.stop());
        const constraints = {
          video: availableCameras.length > 1
            ? { deviceId: { exact: availableCameras[currentCameraIndex].id } }
            : { facingMode }
        };
        stream = await navigator.mediaDevices.getUserMedia(constraints);
        video.srcObject = stream;
      } catch (err) {
        alert("Kamera gagal dinyalakan: " + err.message);
      }
    }

    flipBtn.onclick = async () => {
      if (availableCameras.length > 1) {
        currentCameraIndex = (currentCameraIndex + 1) % availableCameras.length;
      } else {
        facingMode = facingMode === "environment" ? "user" : "environment";
      }

      // Ubah mode tergantung yang aktif
      if (readerDiv.style.display !== "none") {
        await html5QrCode.stop();
        await startQrScanner(availableCameras[currentCameraIndex].id);
      } else {
        await startCamera();
      }
    };

    // === STEP 3: AMBIL FOTO ===
    takeBtn.onclick = async () => {
      const ctx = canvas.getContext("2d");

      // ambil ukuran asli
      let w = video.videoWidth;
      let h = video.videoHeight;

      canvas.width = w;
      canvas.height = h;
      ctx.drawImage(video, 0, 0, w, h);

      let quality = 0.9;
      let resizedBase64 = "";
      const maxKB = 200;

      // === AUTO RESIZE SAMPAI <= 200 KB ===
      while (true) {
        resizedBase64 = canvas.toDataURL("image/jpeg", quality);
        const sizeKB = Math.round(resizedBase64.length * 0.75 / 1024);

        console.log("Size:", sizeKB, "KB | Q:", quality, " | W:", w);

        if (sizeKB <= maxKB) break;

        // turunkan kualitas
        quality -= 0.1;

        // kalau kualitas sudah rendah tapi masih gede ‚Üí kecilkan resolusi
        if (quality < 0.2) {
          w = Math.round(w * 0.7);
          h = Math.round(h * 0.7);

          canvas.width = w;
          canvas.height = h;
          ctx.drawImage(video, 0, 0, w, h);

          // reset kualitas sedikit
          quality = 0.8;
        }

        // batas aman
        if (w < 200 || h < 200) break;
      }

      // tampilkan preview
      preview.src = resizedBase64;
      preview.style.display = "block";

      // stop kamera
      stream.getTracks().forEach(t => t.stop());
      video.srcObject = null;

      takeBtn.disabled = true;
      submitBtn.disabled = false;

      // === UPLOAD KE API ===
      try {
        const response = await fetch("https://api-kinenta-guard.paylite.co.id/upload-base64", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            "Authorization": `Bearer ${localStorage.getItem("token")}`
          },
          body: JSON.stringify({ base64Data: resizedBase64 })
        });

        if (!response.ok)
          throw new Error(`Upload gagal (${response.status})`);

        const result = await response.json();

        // final ‚Üí ganti base64 ke path file server
        photoBase64 = result.pathLocation;

      } catch (err) {
        console.error("‚ùå Upload gagal:", err);
        alert("Upload gagal, ambil foto ulang!");

        takeBtn.disabled = false;
      }
    };


    // === STEP 4: SUBMIT DATA ===
    $('#submit-data').click(async function () {
      const token_location = $('#token_location').val();
      const notes = $('#notes').val();

      if (!token_location) return alert('‚ùå Silakan scan QR terlebih dahulu!');
      // if (!photoBase64) return alert('‚ùå Silakan ambil foto dulu!');

      try {
        const API_URL = 'https://api-kinenta-guard.paylite.co.id';
        const response = await fetch(`${API_URL}/patrol/check`, {
          method: "POST",
          headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token'),
            'Content-Type': "application/json"
          },
          body: JSON.stringify({ token_location, notes, file_images: photoBase64 })
        });

        const data = await response.json();
        if (!response.ok) throw new Error(data.message || "Gagal submit");

        alert("‚úÖ " + data.message);
        window.location.href = "/patrol-list";
      } catch (err) {
        alert("‚ùå " + err.message);
      }
    });
  </script>
</body>

</html>