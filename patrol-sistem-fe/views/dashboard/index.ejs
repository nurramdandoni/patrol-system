<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<script>
    $('.tanggal').change(function () {
        const fromDate = document.getElementById('from').value;
        const toDate = document.getElementById('to').value;
        console.log('From:', fromDate, 'To:', toDate);
        loadPatrolData();
    });


    function loadPatrolData(page, rowCount) {
        currentPage = page || 1;
        rowCount = rowCount || 10;
        const fromDate = document.getElementById('from').value;
        const toDate = document.getElementById('to').value;

        fetch(`<%= API_URL %>/admin/dashboard-data?date_from=${fromDate}&date_to=${toDate}`, {
            method: 'GET',
            headers: {
                'Authorization': 'Bearer ' + localStorage.getItem('token'),
            }
        })
            .then(async (response) => {
                console.log(response);
                if (!response.ok) {
                    const errorText = await response.text();
                    console.error('Server response:', errorText);
                    if (response.status === 401) {
                        alert('‚ùå ' + errorText + ' On Menu Patrol Activity');
                        // Redirect ke halaman login
                        window.location.href = '/';
                    } else {
                        alert('‚ö†Ô∏è Terjadi kesalahan server (' + response.status + ')');
                    }
                    throw new Error('HTTP error ' + response.status);
                }
                let tableBody = '';
                const data = await response.json();

                if (!data || !Array.isArray(data.data) || data.data.length === 0) {
                    document.getElementById('patrol-data').innerHTML = `
                                    <tr><td colspan="6" class="text-center text-muted">Tidak ada data untuk rentang tanggal ini.</td></tr>`;
                    return;
                }

                data.data.forEach((item, index) => {
                });
                renderChart(data.data);
            })
    }
    function renderChart(patrolData) {
        const ctx = document.getElementById('patrolChart').getContext('2d');

        // Siapkan data untuk chart
        const labels = patrolData.map(item => item.date);
        const patrolCounts = patrolData.map(item => item.total);

        // Hapus chart lama jika ada
        if (window.patrolChartInstance) {
            window.patrolChartInstance.destroy();
        }

        // Buat chart baru
        window.patrolChartInstance = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Jumlah Patrol',
                    data: patrolCounts,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    fill: true,
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        precision: 0
                    }
                }
            }
        });
    }

    function showImage(url) {
        if (!url) {
            alert('Tidak ada gambar untuk dilihat.');
            return;
        }

        const modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();

        const previewImage = document.getElementById('previewImage');
        previewImage.src = ''; // reset gambar lama

        // üß† Deteksi tipe URL
        let type = 'unknown';
        try {
            const parsed = new URL(url);
            const path = parsed.pathname.startsWith('/')
                ? parsed.pathname.slice(1)
                : parsed.pathname;

            if (path.startsWith('upload')) type = 'path';
            else if (path.startsWith('data:image')) type = 'base64';
        } catch (err) {
            // Jika bukan URL valid, mungkin base64 langsung
            if (url.startsWith('data:image')) type = 'base64';
        }

        // üî• Aksi berdasarkan tipe
        if (type === 'base64') {
            previewImage.src = url; // langsung tampilkan
        } else if (type === 'path') {
            // fetch dari server
            fetch(url, {
                method: 'GET',
                headers: {
                    'ngrok-skip-browser-warning': 'true',
                },
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Gagal memuat gambar dari server: ' + response.status);
                    }
                    return response.blob();
                })
                .then(imageBlob => {
                    const imageObjectURL = URL.createObjectURL(imageBlob);
                    previewImage.src = imageObjectURL;
                })
                .catch(error => {
                    console.error('Error memuat gambar:', error);
                    alert('‚ùå Gambar gagal dimuat. Coba refresh');
                    modal.hide();
                });
        } else {
            alert('Format URL tidak dikenali.');
            modal.hide();
        }
    }



    document.addEventListener('DOMContentLoaded', () => {
        // === Helper format yyyy-mm-dd ===
        const formatDate = (date) => {
            const y = date.getFullYear();
            const m = String(date.getMonth() + 1).padStart(2, '0');
            const d = String(date.getDate()).padStart(2, '0');
            return `${y}-${m}-${d}`;
        };

        const today = new Date();

        // üëâ awal bulan
        const firstDayOfMonth = new Date(today.getFullYear(), today.getMonth(), 1);

        const fromStr = formatDate(firstDayOfMonth);
        const toStr = formatDate(today);

        const startInput = document.getElementById('from');
        const endInput = document.getElementById('to');

        if (startInput && endInput) {
            startInput.value = fromStr;
            endInput.value = toStr;
        }

        // load data pertama kali
        loadPatrolData();

        // reload saat user ganti tanggal
        $('.tanggal').change(function () {
            loadPatrolData();
        });
    });
</script>