<% if (linkUrl && linkUrl !== "") { %>

    <!-- JIKA ADA URL → pake A tag -->
    <a href="<%= linkUrl %>" id="<%= linkId %>" class="<%= linkClass %>" style="display:none;">
        <button style="width:164px;background-color: blue;color: #FFFFFF;border-radius: 5px;border: solid 1px #FFFFFF;padding: 5px;">
            <i class="fa fa-pencil"></i>&nbsp;<%= name %>
        </button>
    </a>

<% } else { %>

    <!-- JIKA TIDAK ADA URL → tombol biasa -->
    <button id="<%= linkId %>" class="<%= linkClass %>" style="display:none;width:164px;background-color: blue;color:#FFFFFF;border-radius:5px;border:1px solid #FFFFFF;padding:5px;">
        <i class="fa fa-print"></i>&nbsp;<%= name %>
    </button>

<% } %>


<script>
    const pathNow = window.location.pathname;
    const insertCheck = JSON.parse(localStorage.getItem('menus'));

    insertCheck.forEach(menu => {
        if (pathNow === menu.menu_path) {

            // menu_permission harus array!
            if (menu.menu_permission.includes("print")) {

                console.log("Access Created Granted");

                // tampilkan tombol
                document.getElementById("<%= linkId %>").style.display = "inline-block";

            } else {
                console.log("Not Access");
            }
        }
    });
</script>