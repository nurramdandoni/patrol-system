<script>
    document.addEventListener("DOMContentLoaded", () => {

        const pathNow = window.location.pathname;
        const insertCheck = JSON.parse(localStorage.getItem('menus'));

        insertCheck.forEach(menu => {
            if (pathNow === menu.menu_path) {

                // Show INSERT
                if (menu.menu_permission.includes("create")) {
                    const btn = document.getElementById("insertPatroli");
                    if (btn) btn.style.display = "inline-block";
                }

                // Show EDIT
                if (menu.menu_permission.includes("edit")) {
                    const btn = document.getElementById("editPatroli");
                    if (btn) btn.style.display = "inline-block";
                }

                // Show PRINT
                if (menu.menu_permission.includes("print")) {
                    const btn = document.getElementById("printPatroli");
                    if (btn) btn.style.display = "inline-block";
                }
            }
        });

    });
    fetch('<%= API_URL %>/patrol/list', {
        method: 'GET',
        headers: {
            'Authorization': 'Bearer ' + localStorage.getItem('token'),
            'ngrok-skip-browser-warning': 'true'
        }
    })
        .then(async (response) => {
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Server response:', errorText);
                if (response.status === 401) {
                    alert('‚ùå ' + errorText + ' On Menu Patrol List');
                    // Redirect ke halaman login
                    window.location.href = '/';
                } else {
                    alert('‚ö†Ô∏è Terjadi kesalahan server (' + response.status + ')');
                }
                throw new Error('HTTP error ' + response.status);
            }
            let tableBody = '';
            const data = await response.json();
            data.data.forEach((item, index) => {
                window.patrolActivityStore[item.id] = item.patrol_activity;
                tableBody += `
          <tr>
            <td>${index + 1}</td>
            <td>${item.name}</td>
            <td>
              ${item.patrol_activity.length > 0
                        ? item.patrol_activity[0].check_image && item.patrol_activity[0].check_image.trim() !== ''
                            ? `<span class="badge bg-success" style="cursor:pointer" onclick="showImage('<%= API_URL %>/${item.patrol_activity[0].check_image}')">
                        <i class="bi bi-eye-fill"></i> onCapture
                      </span>`
                            : '<span class="badge bg-danger"><i class="bi bi-eye-slash-fill"></i> notCapture</span>'
                        : '<span class="badge bg-secondary">-</span>'
                    }
            </td>
            <td>${item.patrol_activity.length > 0 ? item.patrol_activity[0].check_notes : '-'}</td>
            <td>
              ${item.patrol_activity.length > 0
                        ? item.patrol_activity[0].check_status == 1
                            ? `<span class="badge bg-success" style="cursor:pointer" onclick="showDetail('${item.id}')"><i class="bi bi-check-lg"></i> Checked ${item.patrol_activity.length}/6</span>`
                            : '<span class="badge bg-danger"><i class="bi bi-x-lg"></i> Not Checked</span>'
                        : '<span class="badge bg-secondary">-</span>'
                    }
            </td>
          </tr>
        `;
            });
            // console.log(tableBody);
            document.getElementById('patrol-data').innerHTML = tableBody;
        })

    function showImage(url) {
        if (!url) {
            alert('Tidak ada gambar untuk dilihat.');
            return;
        }

        const modal = new bootstrap.Modal(document.getElementById('imageModal'));
        modal.show();

        const previewImage = document.getElementById('previewImage');
        previewImage.src = ''; // reset gambar lama

        // üß† Deteksi tipe URL
        let type = 'unknown';
        try {
            const parsed = new URL(url);
            const path = parsed.pathname.startsWith('/')
                ? parsed.pathname.slice(1)
                : parsed.pathname;

            if (path.startsWith('upload')) type = 'path';
            else if (path.startsWith('data:image')) type = 'base64';
        } catch (err) {
            // Jika bukan URL valid, mungkin base64 langsung
            if (url.startsWith('data:image')) type = 'base64';
        }

        // üî• Aksi berdasarkan tipe
        if (type === 'base64') {
            previewImage.src = url; // langsung tampilkan
        } else if (type === 'path') {
            // fetch dari server
            fetch(url, {
                method: 'GET',
                headers: {
                    'ngrok-skip-browser-warning': 'true',
                },
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Gagal memuat gambar dari server: ' + response.status);
                    }
                    return response.blob();
                })
                .then(imageBlob => {
                    const imageObjectURL = URL.createObjectURL(imageBlob);
                    previewImage.src = imageObjectURL;
                })
                .catch(error => {
                    console.error('Error memuat gambar:', error);
                    alert('‚ùå Gambar gagal dimuat. Coba refresh');
                    modal.hide();
                });
        } else {
            alert('Format URL tidak dikenali.');
            modal.hide();
        }
    }
    function showDetail(id) {
        console.log(window.patrolActivityStore);
        const activities = window.patrolActivityStore[id];
        let detailHTML = '<h5>Detail Checker</h5><ul class="list-group">';
        activities.forEach(activity => {
            detailHTML += `
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>Checker:</strong> ${activity.user && activity.user.employee ? activity.user.employee.full_name : 'N/A'}<br>
            <strong>Waktu Cek:</strong> ${new Date(activity.createdAt).toLocaleString()}<br>
            <strong>Catatan:</strong> ${activity.check_notes || '-'}
          </div>
          <div>
            <strong>Status:</strong> ${activity.check_status == 1 ? '<span class="badge bg-success">Checked</span>' : '<span class="badge bg-danger">Not Checked</span>'}
          </div>
        </li>
      `;
        });
        detailHTML += '</ul>';
        const detailContent = document.getElementById('detailContent');
        detailContent.innerHTML = detailHTML;
        const modal = new bootstrap.Modal(document.getElementById('detailModal'));
        modal.show();
    }
</script>